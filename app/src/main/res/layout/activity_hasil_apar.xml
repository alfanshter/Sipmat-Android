<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent"
    tools:context=".apar.HasilAparActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hasil APAR"
            android:textSize="30dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="TW"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:id="@+id/spntw"
            android:text="Scan kode apar"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/imginput"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Tahun"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:id="@+id/spntahun"
            android:text="-"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/imginput"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/rvhasilapar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Jabatan"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType=""
            android:id="@+id/edtjabatan"
            android:text="-"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/imginput"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="TTD"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanda tangan"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="@color/green"
            app:cornerRadius="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Nama"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:id="@+id/edtnama"
            android:text="-"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/imginput"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYNCHRONE"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            app:cornerRadius="10dp"
            android:layout_marginBottom="50dp"
            />




    </LinearLayout>

</ScrollView>